<div class="form users-new">
  <div class="container">
    <div class="form-heading">
      <h1>Piitaへようこそ</h1>
      <p>新規登録(無料)して利用を開始しましょう！</p>
    </div>

    <% @user.errors.full_messages.each do |message| %>
      <div class="form-error">
        <p><%= message %></p>
      </div>
    <% end %>

    <%= form_for(@user) do |f| %>
      <div class="form-body">
        <p>ユーザ名</p>
        <%= f.text_field :user_name, value: @user.user_name, class: "user-form" %>
        <p>メールアドレス</p>
        <%= f.email_field :email, value: @user.email, class: "user-form" %>
        <p>パスワード</p>
        <%= f.password_field :password, value: @user.password, class: "user-form" %>
        <div class="submit-wrapper">
          <%= f.submit "新規登録", class: "user-btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
