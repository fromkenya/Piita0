<div class="form login">
  <div class="container">
    <div class="form-heading">
      <h1>Piitaへログイン</h1>
      <p>ログインして利用を開始しましょう！</p>
    </div>

    <div class="error-message">
      <p><%= @error_message %></p>
    </div>

    <%= form_for(@user, url: user_session_path, html: {method: :post}) do |f| %>
      <div class="form-body login">
        <p>メールアドレス</p>
        <%= f.email_field :email %>
        <p>パスワード</p>
        <%= f.password_field :password %>
        <div class="submit-wrapper">
          <%= f.submit "ログイン", class: "user-btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
