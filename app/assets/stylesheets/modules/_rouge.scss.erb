<%= Rouge::Themes::Monokai.render(:scope => '.highlight') %>

.highlight {
    margin-top: 10px;
    margin-bottom: 40px;
    pre {
      overflow: auto;
      word-wrap: normal;
      white-space: pre;
      font-size: 0.9em;
      line-height: 1.5;
      border-radius: 2px;
      padding: 20px;
        margin: 0;
        code {
            font-size: 1em;
            table.rouge-table {
                margin: 0;
                // code
                td.rouge-code {
                    padding: 0;
                    vertical-align: top;
                    pre {
                        padding: 5px 10px;
                        line-height: 1.6em;
                    }
                }
            }
        }
    }
}
